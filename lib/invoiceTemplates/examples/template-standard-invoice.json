{
  "id": "standard-invoice",
  "name": "Standard Invoice Template",
  "version": "1.0.0",
  "description": "Multi-page invoice template with dynamic pagination and aesthetic balancing",
  "sections": {
    "header": "header-standard-v1",
    "continuationHeader": "header-standard-v1",
    "itemRow": "item-row-standard-v1",
    "footer": "footer-standard-v1"
  },
  "layout": {
    "rowsPerPage": 57,
    "itemSectionStartRow": 23,
    "itemSectionEndRow": 47,
    "pageSize": "A4",
    "orientation": "portrait"
  },
  "paginationRules": {
    "modes": {
      "comfortable": {
        "name": "comfortable",
        "itemsPerPage": 3,
        "useSpacers": true,
        "compressRows": false,
        "spacingMultiplier": 1.0
      },
      "compact": {
        "name": "compact",
        "itemsPerPage": 5,
        "useSpacers": false,
        "compressRows": true,
        "spacingMultiplier": 0.8
      },
      "dense": {
        "name": "dense",
        "itemsPerPage": 7,
        "useSpacers": false,
        "compressRows": true,
        "spacingMultiplier": 0.7
      }
    },
    "triggers": {
      "comfortableWhenItemCountBelow": 3,
      "compactWhenItemCount": 4,
      "compactWhenNoteLengthExceeds": 80,
      "denseWhenItemCount": 8
    },
    "balancing": {
      "minItemsPerPage": 2,
      "minItemsOnLastPage": 2,
      "preferEvenDistribution": true,
      "redistributeThreshold": 0.3,
      "maxItemCountDifference": 2
    },
    "specialCases": {
      "maxPages": 10
    }
  }
}
