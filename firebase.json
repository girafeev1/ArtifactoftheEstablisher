{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/clients", "function": "clients" },
      { "source": "/api/businesses", "function": "businesses" },
      {
        "source": "**",
        "run": { "serviceId": "next-app", "region": "us-central1" }
      }
    ]
  }
}

