# Consolidated environment variables for the AOTE PMS app
# Copy this file to ".env" (kept git-ignored) and fill the values.
# Client-side keys are safe to expose (NEXT_PUBLIC_*). All others are server-only secrets.

# ----------------------------------------
# Client (loaded in browser)
# ----------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firestore database routing (optional — defaults shown in code)
NEXT_PUBLIC_DEFAULT_FIRESTORE_DATABASE_ID=tebs-erl
NEXT_PUBLIC_PROJECTS_FIRESTORE_DATABASE_ID=tebs-erl
NEXT_PUBLIC_DIRECTORY_FIRESTORE_DATABASE_ID=epl-directory

# ----------------------------------------
# Server (kept secret; never expose in client)
# ----------------------------------------
# Firebase Admin service account (use quotes and literal \n or real newlines for private keys)
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Optional: Alternate service account JSON blob used by certain server utilities
# Keep the full JSON string quoted if you embed newlines.
# Example: "{\n  \"type\": \"service_account\", ... }"
ACCOUNT_SERVICE_PRIVATE_KEY=

# NextAuth configuration
NEXTAUTH_URL=
NEXTAUTH_SECRET=

# Google (service account used by server-side utilities)
GOOGLE_PROJECT_ID=
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# OAuth (Google OAuth client for NextAuth if applicable)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# Discord OAuth (NextAuth Discord provider)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Discord Bot (for text UI via Interactions)
DISCORD_APPLICATION_ID=
DISCORD_PUBLIC_KEY=
DISCORD_BOT_TOKEN=
# Optional: limit command registration to a guild during testing
DISCORD_GUILD_ID=

# App-specific integrations
CALENDAR_SCAN_URL=
SCAN_SECRET=
PMS_REFERENCE_LOG_ID=

# ----------------------------------------
# Local development-only toggles (do not set in production)
# ----------------------------------------
# Allows signing in without Firebase Admin on your local machine only.
# Leave unset in production. See pages/api/auth/[...nextauth].ts
DEV_AUTH_BYPASS=0

# Feature flag: enable Discord web OAuth (NextAuth) for the web app
# Default off since Discord mobile flow will use the bot interactions
ENABLE_DISCORD_WEB_AUTH=0

# ----------------------------------------
# CI/CD (GitHub Actions → Vercel CLI)
# These are not used by the app; they are used by the deploy workflow.
# Store them as GitHub Encrypted Secrets if possible; values here are placeholders.
# ----------------------------------------
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=
VERCEL_TOKEN=
